<!-- to use this partial two ViewBag variables need to be set -->
<!-- ViewBag.id and ViewBag.controller -->
<button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
    <span class="glyphicon glyphicon-trash"></span>
    Delete...
</button>

<!-- Modal for confirming deletions -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="deleteModalLabel">Delete @ViewBag.controller</h4>
            </div>
            <form id="deleteForm" class="form-horizontal" action="~/@ViewBag.controller/Delete" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-body">

                    <div class="form-group">
                        <p>Are you 100% sure you really really want to delete this poor defenseless @ViewBag.controller?</p>
                    </div>
                </div>

                <div class="hide">
                    <input name="id" value="@ViewBag.id" />
                </div>

                <div id="deleteModalErrors"></div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Delete with Malice</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
